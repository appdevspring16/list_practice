
<h3>Edit Card #<%= @card.id %></h3>

<form action="/update_card/<%= @card.id %>">

  <div>
    <label>
      Title
    </label>
    <input type="text" name="the_title" value="<%= @card.title %>">
  </div>

  <div>
    <label>
      Description
    </label>
    <textarea name="the_description" placeholder="Description" rows="3"><%= @card.description %></textarea>
  </div>
  
  <button>
    Update Card
  </button>
</form>
